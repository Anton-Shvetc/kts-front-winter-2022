{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "jsx": "react",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
    "target": "es2016",                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "skipLibCheck": true,                                
    },
      "include": [
        "src/**/*"
      ],
      "exclude": [
        "node_modules"
      ]

}

